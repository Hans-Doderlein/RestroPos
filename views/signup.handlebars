<!-- views/signup.handlebars -->
<section class="hero is-fullheight is-light">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-2">Restro POS</h1>
      <br />
      <h2 class="subtitle is-4">Sign Up Here!</h2>
      <div class="box">
        <form id="signup-input">
          <div class="field">
            <label for="email" class="label">Email:</label>
            <div class="control">
              <input
                type="email"
                id="email-signup"
                name="email"
                required
                class="input"
              />
            </div>
          </div>
          <div class="field">
            <label for="username" class="label">Username:</label>
            <div class="control">
              <input
                type="text"
                id="username-signup"
                name="username"
                required
                class="input"
              />
            </div>
          </div>
          <div class="field">
            <label for="password" class="label">Password:</label>
            <div class="control">
              <input
                type="password"
                id="password-signup"
                name="password"
                required
                class="input"
              />
            </div>
          </div>
          <div class="field">
            <label for="confirmPassword" class="label">Confirm Password:</label>
            <div class="control">
              <input
                type="password"
                id="confirmPassword-signup"
                name="confirmPassword"
                required
                class="input"
              />
            </div>
          </div>
          <div class="field">
            <div class="control">
              <button
                type="submit"
                id="submit-signup"
                class="button is-primary"
              >
                Sign Up
              </button>
            </div>
          </div>
          <p id="error-signup" class="has-text-danger"></p>
        </form>
        <p>Already have an account? <a href='/'>Log in</a></p>
      </div>
    </div>
  </div>
</section>
<script src='/js/signup.js'></script>
