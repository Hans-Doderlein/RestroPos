<!-- views/reset-password-form.handlebars -->
<section class="hero is-fullheight is-light">
  <div class="hero-body">
    <div class="container has-text-centered">
      <form id="resetPassForm" class="box">
        <div class="field">
          <label for="email" class="label">Email:</label>
          <div class="control">
            <input
              type="email"
              id="email"
              name="email"
              disabled
              value="{{email}}"
              class="input"
            />
          </div>
        </div>
        <div class="field">
          <label for="password" class="label">Password:</label>
          <div class="control">
            <input
              type="password"
              id="password-reset"
              name="password"
              required
              class="input"
            />
          </div>
        </div>
        <div class="field">
          <label for="confirmPassword" class="label">Confirm Password:</label>
          <div class="control">
            <input
              type="password"
              id="confirmPassword-reset"
              name="confirmPassword"
              required
              class="input"
            />
          </div>
        </div>
        <div class="field">
          <div class="control">
            <button
              type="submit"
              id="submit-reset"
              class="button is-primary"
            >
              Reset Password
            </button>
          </div>
        </div>
        <p id="error-reset" class="has-text-danger"></p>
      </form>
    </div>
  </div>
</section>
<script src='/js/newPass.js'></script>
