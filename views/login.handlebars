<!-- views/login.handlebars -->
<header>
    <h1>Restro POS</h1>
	<br>
</header>
<main>
    <section class="login-container">
        <h2>User Login</h2>
         <form>
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required placeholder="Username">
            </div>
             <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required aria-label="Enter your password" placeholder="Password">
            </div>
            <button type="submit" class="btn-submit">Log In</button>
         </form>
            <nav>
                <p>Not a user? <a href="/signup">Sign up here</a></p>
                <p>Forgot your password? <a href="/resetpassword">Reset it here</a></p>
            </nav>
    </section>
</main>

