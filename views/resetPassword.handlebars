<!-- views/reset-password.handlebars -->
<section class="hero is-fullheight is-light">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-2">Reset Password</h1>
      <p>Enter your email address to receive a password reset link.</p>
      <div class="box">
        <form id="resetPassword">
          <div class="field">
            <label for="email" class="label">Email:</label>
            <div class="control">
              <input
                type="email"
                id="email"
                name="email"
                required
                class="input"
                placeholder="Email"
              />
            </div>
          </div>
          <div id="error" class="has-text-danger"></div>
          <div class="field">
            <div class="control">
              <button
                type="submit"
                class="button is-primary btn-submit"
              >
                Send Reset Link
              </button>
            </div>
          </div>
        </form>
        <nav class="mt-4">
          <p>Remembered your password? <a href='/users/login'>Log in here</a></p>
        </nav>
      </div>
    </div>
  </div>
</section>
<script src='/js/resetPassword.js'></script>
